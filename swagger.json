  "paths": {
    "/pirates/": {
      "get": {
        "summary": "Get all known pirates",
        "description": "Returns all pirates",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "post": {
        "tags": [
          "Pirates"
        ],
        "summary": "Add a pirate",
        "description": "Add a pirate to the database",
        "responses": {
          "201": {
            "description": "Created"
          },
          "500": {
            "description": "Internal Server Error"
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "fullName": {
                    "example": "any"
                  },
                  "birthPlace": {
                    "example": "any"
                  },
                  "birthday": {
                    "example": "any"
                  },
                  "status": {
                    "example": "any"
                  },
                  "fruitType": {
                    "example": "any"
                  },
                  "affiliations": {
                    "example": "any"
                  },
                  "position": {
                    "example": "any"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/pirates/{id}": {
      "get": {
        "tags": [
          "Pirates"
        ],
        "summary": "Get pirates by id",
        "description": "Returns a pirates with specified id",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "put": {
        "tags": [
          "Pirates"
        ],
        "summary": "Update a existing pirate by id",
        "description": "Update a existing pirate in the database by id",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "No Content"
          },
          "500": {
            "description": "Internal Server Error"
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "fullName": {
                    "example": "any"
                  },
                  "birthPlace": {
                    "example": "any"
                  },
                  "birthday": {
                    "example": "any"
                  },
                  "status": {
                    "example": "any"
                  },
                  "fruitType": {
                    "example": "any"
                  },
                  "affiliations": {
                    "example": "any"
                  },
                  "position": {
                    "example": "any"
                  }
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": [
          "Pirates"
        ],
        "summary": "Delete a pirate by id",
        "description": "Delete a pirate in the database by id",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "No Content"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  }
